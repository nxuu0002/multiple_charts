{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "COVID-19 Cases per Country (13 Oct 2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/nxuu0002/multiple_charts/main/data/case_count_by_state.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Date_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Jan",
          "Feb",
          "Mar",
          "Apr",
          "May",
          "Jun",
          "Jul",
          "Aug",
          "Sep",
          "Oct"
        ],
        "labels":[
          "Show All",
          "January",
          "February",
          "March",
          "April",
          "May",
          "June",
          "July",
          "August",
          "September",
          "October"
        ],
        "name": "Date Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Case > 0"},
    {"filter": "datum.Population > Population_Above"},
    {"filter": "Date_selection == null || datum.Date == Date_selection"},
    {
      "calculate": "datum.Case/datum.Population * 1000",
      "as": "Cases per 1000 Population"
    }
  ],
  "encoding": {
    "x": {
      "field": "Case",
      "type": "quantitative",
      "title": "Cases",
      "axis": {"tickCount": 7},
      "scale": {"type": "log", "domain": [1, 1000000]}
    },
    "y": {
      "field": "Case",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [1, 1000000]}
    }
  },
  "layer": [
    {
      "selection": {
        "date_highlight": {
          "type": "multi",
          "fields": ["Date"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [100000, 1000000, 5000000, 10000000, 50000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Date",
          "type": "nominal"
          }
        },
        "opacity": {
          "condition": {"selection": "date_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Case", "type": "quantitative", "format": ","},
          {"field": "Date", "type": "nominal", "format": ","},
          {
            "field": "Cases per 1000 Population",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "State", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['State'] == 'Victoria' || datum['State'] == 'New South Wales'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Case", "type": "quantitative", "format": ","},
          {"field": "Date", "type": "nominal", "format": ","},
          {
            "field": "Cases per 1000 Population",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}
